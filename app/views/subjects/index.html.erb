<% content_for :head do %>
  <%= t '.title' %>
<% end %>

<% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible">
      <%= flash[:notice] %>
    </div>
<% end %>

<%= render "search"%>


<div class="box box-primary">
<div class="box box-default">
  <!-- /.box-header -->
  <div class="box-body no-padding">
    <table class="table table-hover">
      <tr>
        <th style="width: 10px"></th>
        <th><%= t '.description' %></th>
      </tr>

      <% @subjects.each do |subject| %>
      <tr onclick="location.href='<%= edit_subject_path(subject) %>'" style="cursor:pointer">
        <td><%= subject.id %></td>
        <td><%= subject.description %></td>
      </tr>
    <% end %>
    </table>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>

<% if @subjects.size > 0 %>
<%= paginate @subjects %>
<% end %>
