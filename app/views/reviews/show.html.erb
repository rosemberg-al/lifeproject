<% content_for :head do %>
  <%= t '.title' %>
<% end %>

<% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible">
      <%= flash[:notice] %>
    </div>
<% end %>

<div class="box box-primary">
<div class="box box-default">
  <div class="box-body">
    <div class="row col-md-12">
      <div class="col-md-6">
          <%=raw t '.review', :review => @review.review %>
       </div>
     </div>
    </div>

    <div class="box-footer">
      <%= button_show new_review_path,edit_review_path(@review),reviews_path %>
    </div>
  </div>
</div>
