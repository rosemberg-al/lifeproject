<%= form_tag content_types_path, :method => :get, :class => 'search' do %>
<%= hidden_field_tag :q, 'q' %>

<div class="box-header">
<%= button_index new_content_type_path %>
</div>

<div class="box box-default">
  <div class="box-body">
    <div class="row col-md-12">
      <div class="col-md-6">
        <%= t ".description" %> <br>
        <%= text_field_tag "content_type[description]", @content_type["description"],:placeholder => t('.description'), :class => "form-control" %>
      </div>

      <div class="col-md-6">
        <%= t ".inactive" %> <br>
        <%= hidden_field_tag "content_type[inactive]", "N" %>
        <%= check_box_tag "content_type[inactive]", "Y",  (@content_type["inactive"]=="Y")  %>
      </div>
    </div>

    <div class="row col-md-12">
      <div class="col-md-4 ">
          <%= t ".feature" %> <br>
          <%=
          select_tag "content_type[feature]",
          options_for_select(ContentType.features.keys.map { |key,_| [t("enums.content_type_feature.#{key}"), key] },@content_type["feature"]),
          { include_blank: true ,:class => "form-control"}
          %>

      </div>
    </div>
  </div>
</div>
<% end %>
