<% content_for :head do %>
  <%= t '.title' %>
<% end %>

<% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible">
      <%= flash[:notice] %>
    </div>
<% end %>

<div class="box box-primary">
<div class="box box-default">
  <div class="box-body">
    <div class="row col-md-12">
      <div class="col-md-6">
          <%= t '.name', :name => @person.name %>
       </div>
     </div>
    </div>

    <div class="box-footer">
      <%= button_show new_person_path,edit_person_path(@person),people_path %>
    </div>
  </div>
</div>
