<% content_for :head do %>
  <%= t '.title' %>
<% end %>

<% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible">
      <%= flash[:notice] %>
    </div>
<% end %>

<%= render "search"%>


<div class="box box-primary">
<div class="box box-default">
  <!-- /.box-header -->
  <div class="box-body no-padding">
    <table class="table table-hover">
      <tr>
        <th style="width: 10px"></th>
        <th><%= t '.name' %></th>
        <th><%= t '.type_person' %></th>
      </tr>

      <% @people.each do |person| %>
      <tr onclick="location.href='<%= edit_person_path(person) %>'" style="cursor:pointer">
        <td><%= person.id %></td>
        <td><%= person.name %></td>
        <td><%= t("enums.type_person.#{person.type_person}")  %></td>
      </tr>
    <% end %>
    </table>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>

<% if @people.size > 0 %>
<%= paginate @people %>
<% end %>
