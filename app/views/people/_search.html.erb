<%= form_tag people_path, :method => :get, :class => 'search' do %>
<%= hidden_field_tag :q, 'q' %>

<div class="box-header">
<%= button_index new_person_path %>
</div>

<div class="box box-default">
  <div class="box-body">
    <div class="row col-md-6">
      <div class="col-md-6">
        <%= t ".name" %> <br>
        <%= text_field_tag "person[name]", @person["name"],:placeholder => t('.name'), :class => "form-control" %>
      </div>

      <div class="col-md-4"   >
          <%= t ".type_person" %> <br>
          <%=
          select_tag "person[type_person]",
          options_for_select(Person.type_people.keys.map { |key,_| [t("enums.type_person.#{key}"), key] },@person["type_person"]),
          { include_blank: true ,:class => "form-control"}
          %>
      </div>

      <div class="col-md-2">
        <%= t ".inactive" %> <br>
        <%= hidden_field_tag "person[inactive]", "N" %>
        <%= check_box_tag "person[inactive]", "Y",  (@person["inactive"]=="Y")  %>
      </div>
    </div>
  </div>
</div>
<% end %>
