<% content_for :head do %>
  <%= t '.title' %>
<% end %>

<% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible">
      <%= flash[:notice] %>
    </div>
<% end %>

<%= render "search"%>


<div class="box box-primary">
<div class="box box-default">
  <!-- /.box-header -->
  <div class="box-body no-padding">
    <table class="table table-hover">
      <tr>
        <th style="width: 10px"></th>
        <th><%= t '.description' %></th>
        <th><%= t '.content_type' %></th>
        <th><%= t '.content_genre' %></th>
      </tr>

      <% @contents.each do |content| %>
      <tr onclick="location.href='<%= edit_content_path(content) %>'" style="cursor:pointer">
        <td><%= content.id %></td>
        <td><%= content.description %></td>
        <td><%= content.ct_description %></td>
        <td><%= content.cg_description %></td>
      </tr>
    <% end %>
    </table>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>

<% if @contents.size > 0 %>
<%= paginate @contents %>
<% end %>
