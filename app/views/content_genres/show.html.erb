<% content_for :head do %>
  <%= t '.title' %>
<% end %>

<% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible">
      <%= flash[:notice] %>
    </div>
<% end %>

<div class="box box-primary">
<div class="box box-default">
  <div class="box-body">
    <div class="row col-md-12">
      <div class="col-md-6">
          <%= t '.description', :description => @content_genre.description %>
       </div>
     </div>
    </div>

    <div class="box-footer">
      <%= button_show new_content_genre_path,edit_content_genre_path(@content_genre),content_genres_path %>
    </div>
  </div>
</div>
