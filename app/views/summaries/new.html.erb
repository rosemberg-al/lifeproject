<% content_for :head do %>
  <%= t '.title' %>
<% end %>


<% if @summary.errors.any? %>
  <div id="error_explanation" class="alert alert-danger alert-dismissible">
    <%= t 'general.form_error' %>
  </div>
<% end %>

<%= form_for @summary do |f| %>
<div class="box box-primary">
<div class="box box-default">

  <%= render 'form' , f: f %>


</div>
</div>





<div class="box box-danger">
<div class="box box-default">
<div class="row col-md-12">
<div class="row col-md-12">
<h4><%= t '.summary_contents' %></h4>
</div>
</div>
<div class="box-body">
<div class="row" id="summary_contents_div">
<%= f.fields_for :summary_contents do |cp| %>
   <%= render 'summary_content_fields', f: cp %>
<% end %>
</div>
<br>

<%= link_to_add_association t('.add_content'), f, :summary_contents, :class => 'btn btn-primary' %>
</div>

</div>
</div>

<div class="box-footer">
<%= button_save new_summary_path,summaries_path,f %>
</div>
<% end %>
