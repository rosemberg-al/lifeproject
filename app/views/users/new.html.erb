



<div class="login-box">
  <div class="login-logo">
  <b>Life</b>Project
  </div>

  <div class="login-box-body">
    <p class="login-box-msg">  <%= t '.message' %></p>

    <%= form_for @user do |f| %>


        <div class="form-group has-feedback">

            <%= f.label :full_name %> <br>
            <%= f.text_field :full_name,  :class => "form-control" %>
            <%= error_tag @user, :full_name %>

        </div>

          <div class="form-group has-feedback">

            <%= f.label :email %> <br>
            <%= f.text_field :email,  :class => "form-control" %>
            <%= error_tag @user, :email %>

        </div>




        <div class="form-group has-feedback">

            <%= f.label :password %> <br>
            <%= f.text_field :password,  :class => "form-control",:type=>"password" %>
            <%= error_tag @user, :password %>

        </div>

        <div class="form-group has-feedback">

            <%= f.label :password_confirmation %> <br>
            <%= f.text_field :password_confirmation,  :class => "form-control",:type=>"password"%>
            <%= error_tag @user, :password_confirmation %>

        </div>




        <div class="form-group has-feedback">

            <%= f.label :bio %> <br>
            <%= f.text_area :bio,  :class => "form-control" %>
            <%= error_tag @user, :bio %>

        </div>

        <% if @user.errors.has_key? :base %>
          <div id="error_explanation" class="has-error">
            <%=content_tag :span, @user.errors[:base].join(', '),:class => 'help-block' %>
          </div>
        <% end %>


        <div class="row">
         <div class="col-xs-7">
           <div class="checkbox icheck">
             <label>
               <input type="checkbox"><a href="#"><%= t '.agree_terms' %></a>
             </label>
           </div>
         </div>
         <!-- /.col -->
         <div class="col-xs-4">
           <%= f.submit :class=>"btn btn-primary" %>
         </div>
         <!-- /.col -->
       </div>




    <% end %>

    <a href="<%= new_user_sessions_path %>" class="text-center"><%= t '.already_signup' %></a>
  </div>
</div>
