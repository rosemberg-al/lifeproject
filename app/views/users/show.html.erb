<% content_for :head do %>
  <%= t '.title' %>
<% end %>

<% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible">
      <%= flash[:notice] %>
    </div>
<% end %>

<div class="box box-primary">
<div class="box box-default">
  <div class="box-body">

    <div class="row col-md-12">
      <div class="col-md-6">
       <%= link_to(image_tag(@user.picture.thumb.url), @user.picture_url) if @user.picture? %>
      </div>
    </div>
    <div class="row col-md-12">
      <div class="col-md-6">
        <h1><%= t '.profile', :user_name => @user.full_name %> </h1>
        <ul>
        <li><%= t '.bio', :bio=>@user.bio %> </li>
        </ul>
      </div>
    </div>
</div>
<% if current_user.id==@user.id %>
<div class="box-footer">
 <%= button_click  t('button.edit'),"location.href='#{edit_user_path(@user)}';" %>
</div>
<% end %>
</div>
</div>

<% content_for :javascript do %>
  shortcut.add("F10",function(){
    location.href='<%=edit_user_path(@user)%>';
  });
<% end %>
