<% content_for :head do %>
  <%= t '.title' %>
<% end %>

<% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible">
      <%= flash[:notice] %>
    </div>
<% end %>

<%= render "search"%>


<div class="box box-primary">
<div class="box box-default">
  <!-- /.box-header -->
  <div class="box-body no-padding">
    <table class="table table-hover">
      <tr>
        <th style="width: 10px"></th>
        <th><%= t '.quotation' %></th>
        <th><%= t '.type_quote' %></th>
        <th><%= t '.content' %></th>
      </tr>

      <% @quotations.each do |quotation| %>
      <tr onclick="location.href='<%= edit_quotation_path(quotation) %>'" style="cursor:pointer">
        <td><%= quotation.id %></td>
        <td><%=raw quotation.quotation[0,50]+" <b>...<b>" %></td>
        <td><%= t("enums.quotation_type.#{quotation.type_quote}")  %></td>
        <td><%= quotation.c_description %></td>
      </tr>
    <% end %>
    </table>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>

<% if @quotations.size > 0 %>
<%= paginate @quotations %>
<% end %>
